{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm install && npm run build"
  },
  "deploy": {
    "startCommand": "npx serve@latest dist --listen ${PORT:-3000}",
    "restartPolicyMaxRetries": 3,
    "restartPolicyWindow": 600
  }
}
