{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm install && npm run build"
  },
  "deploy": {
    "startCommand": "npx astro preview --host 0.0.0.0 --port ${PORT:-3000}",
    "restartPolicyMaxRetries": 3,
    "restartPolicyWindow": 600
  }
}
